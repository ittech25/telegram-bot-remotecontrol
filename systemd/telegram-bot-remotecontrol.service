[Unit]
Description=Telegram Bot for Remote Control
After=syslog.target
After=network.target

[Service]
Type=simple
User=some_user
Group=some_user
WorkingDirectory=/path/to/telegram-bot-remotecontrol
ExecStart=/path/to/telegram-bot-remotecontrol/telegrambot-bot-remotecontrol
Restart=always
RestartSec=5
Environment=

[Install]
WantedBy=multi-user.target
