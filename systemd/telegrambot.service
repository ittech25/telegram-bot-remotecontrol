[Unit]
Description=telegram bot
After=syslog.target
After=network.target

[Service]
Type=simple
User=some_user
Group=some_user
WorkingDirectory=/path/to/telegram-bot-transmission
ExecStart=/path/to/telegram-bot-transmission/telegrambot
Restart=always
RestartSec=5
Environment=

[Install]
WantedBy=multi-user.target
